def print_0_to_n(n: int) -> int:
    counter: int = 0
    while counter < n:
        print(counter)
        counter = counter + 1

    print(f"final: {counter}")
    return counter


def reverse(a_str: str) -> str:
    """reverse a string"""
    idx: int = 0
    result: str = ""
    while idx < len(a_str):
        result = a_str[idx] + result
        idx = idx + 1

    return result


# A nested While loop
def triangle(n: int) -> None:
    i: int = 1
    line: str
    while i <= n:
        line = ""
        while len(line) < i:
            line += "*"
        print(line)
        i += 1


print(triangle(2))
